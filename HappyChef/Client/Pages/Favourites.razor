@page "/favourites"
@attribute [Authorize]
@inject HttpClient http

<h3>Favourites</h3>

@if (favourites == null)
{
    <text> Loading</text>
}
else if (favourites.Length == 0)
{
    <text> There are no records in the database </text>
}
else
{
    <table class="table">
        <thead class>
            <tr>
                <th>Actions</th>
                <th>Recipe Name</th>
                <th>Calories</th>
                <th>Prep Time</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var w in favourites)
            {
                <tr>
                    <td>
                        <a class="btn btn-success">Edit</a>
                        <button class="btn btn-danger">Delete</button>
                    </td>
                    <td>@w.FavouriteLabel</td>
                    <td>@w.FavouriteCalories</td>
                    <td>@w.FavouriteTotalTime</td>

                </tr>
            }
        </tbody>
    </table>

}
@code {
    FavouritesModel[] favourites { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadFavourites();
    }

    async Task LoadFavourites()
    {
        favourites = await http.GetFromJsonAsync<FavouritesModel[]>("api/favourites");


    }

}
